<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/all.css" rel="stylesheet" />
   <style>
       :root {
           --bgcolor: linear-gradient(45deg,#29B6F6,#0288D1);
           --txtcolor: #0288D1;
       }
       .bg-mycolor
       {
           background:var(--bgcolor) !important;
       }
       .text-mycolor
       {
           color:var(--txtcolor) !important;
       }
       #menu ul li a:hover
       {
           color: white;
           background: var(--bgcolor);
           color:white;
           border-radius:8px;
           transform:scale(0.9);
           transition :all 1s;
       }
       .aaaa:hover
       {
           background: white !important;
           color:var(--txtcolor);
       }
   </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row t1 text-bg-dark text-center">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <i class="fa-solid fa-phone"></i>
                +91 9559779666
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                <i class="fa-solid fa-envelope"></i>
                ayushsri9666@gmail.com
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12">
                Welcome to 10MinZepto
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 px-1">
                <i class="fa-brands fa-square-facebook"></i>
                <i class="fa-brands fa-square-twitter"></i>
                <i class="fa-brands fa-square-whatsapp"></i>
                <i class="fa-brands fa-square-instagram"></i>
                <i class="fa-brands fa-linkedin"></i>
            </div>
        </div>
        <div class="row t2">
            <div class="col-sm-10 mx-auto">
                <div class="row">
                    <div class="col-sm-6 fs-2">
                        10Min<b class="text-mycolor">Zepto<img src="~/Content/image/OIG-removebg-preview.png" class="img-fluid" style="height:50px; transform:translateY(-4px)" /></b>
                    </div>
                    <div class="col-sm-3" style="transform:translateY(8px);">
                        @{
                            if (Session["useremail"] != null)
                            {
                                <a href="/home/myorder" style="text-decoration:none;">
                                    <button class="btn btn-primary">My Orders</button>
                                </a>
                            }
                        }  
                    </div>
                    <div class="col-sm-3 fs-5 mb-3 text-center ms-5 text-bg-primary" style="border-radius:10px; width:140px; transform:translateY(7px);">
                        <a href="/home/Cart" style="text-decoration:none;">
                            <b><i class="fa-solid fa-cart-shopping fa-bounce" style="color:black;"></i></b>
                            <i class="badge">@Html.Raw(Session["cart"])</i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row t3 bg-mycolor">
            <div class="col-sm-10 mx-auto bg-light">
                <!--Start Menu-->
                <nav class="navbar navbar-expand-lg bg-body-tertiary" id="menu">
                    <div class="container-fluid">

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/home/index"><i class="fa-solid fa-house"></i> Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/home/About"><i class="fa-solid fa-circle-info"></i> About Us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/home/Product"><i class="fa-brands fa-product-hunt"></i> Product</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/home/Contact"><i class="fa-sharp fa-solid fa-headset"></i> Customer Support</a>
                                </li>
                                @{
                                    if (Session["useremail"] == null)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="/home/SignIn"><i class="fa-solid fa-arrow-right-to-bracket"></i> Sign In</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" aria-disabled="true">
                                                Default User
                                                <img src="~/Content/image/user.png" class="img-thumbnail" style="max-height:30px; border-radius:20px;" />
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="/home/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-primary fw-bold aaaa" aria-disabled="true">
                                                @Session["username"]
                                                <img src="~/Content/image/user.png" class="img-thumbnail" style="max-height:30px; border-radius:20px;" />
                                            </a>
                                        </li>
                                    }
                                }
                                <li class="nav-item">
                                    <a class="nav-link" href="/home/SignUp"><i class="fa-sharp fa-solid fa-user-plus"></i> Sign Up</a>
                                </li>
                                <li class="nav-item ms-5">
                                    <a href="/home/adminlogin" class="nav-link" aria-disabled="true">
                                        Admin Login
                                        <i class="fa-sharp fa-solid fa-hat-cowboy"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <!--End Menu-->
            </div>
        </div>

    </div>
    @RenderBody()
    <!--Footer-->
    <div class="row footer1 mt-3 pt-5 ps-5 pe-5 mx-0" style="background: #262626;">
        <div class="col-lg-3 col-md-4 col-sm-12 ps-5 mx-0">
            <abbr style="color:white">10Min</abbr><b class="text-mycolor">Zepto<img src="~/Content/image/OIG-removebg-preview.png" class="img-fluid" style="height:50px; transform:translateY(-4px)" /></b>            <p class="text-light">
                Address:Fatehpur, Uttar Pradesh 212601<br><br>
                Phone: 9559779666<br><br>
                Email:ayushsri9666@gmail.com
            </p>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-12 ps-5">
            <h4 class="text-light">Information</h4><br>
            <p class="text-light">
                <a href="/home/about" class="mt-5 text-light" style="text-decoration: none;">About Us</a><br /><br>
                <a href="#" class="mt-5 text-light" style="text-decoration: none;">Check Out</a><br><br>
                <a href="/home/contact" target="_blank" class="mt-5 text-light" style="text-decoration: none;">Contact</a>
            </p><br>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-12">
            <h4 class="text-light">My Account</h4><br>
            <p>
                <a href="#" class="text-light" style="text-decoration: none;">My Account</a><br><br>
                <a href="/home/Contact" class="text-light" style="text-decoration: none;" target="_blank">Contact</a><br><br>
                <a href="/home/cart" class="text-light" style="text-decoration: none;">Shopping Cart</a><br><br>
            </p>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-12">
            <h4 class="text-light">Join Our Newsletter Now</h4><br>
            <p class="text-light">
                Get Email updates about our latest shop and
                special offers.
            </p>
            <div class="input-group mb-3">
                <input type="text" placeholder="Enter Your Mail" class="form-control" style="height:40px;" />
                <i class="input-group-text bg-mycolor" style="height:40px;">SUBSCRIBE</i>
            </div>
        </div>
    </div>
    <div class="row Footer2 m-0">
        <hr class="m-0 p-0">
        <div class="col-sm-12 p-0 mx-auto bg-dark m-0">
            <div class="text-center fs-3 mt-2 text-light mt-3">
                <abbr style="color:white;">10Min</abbr><b class="text-mycolor">Zepto<img src="~/Content/image/OIG-removebg-preview.png" class="img-fluid" style="height:50px; transform:translateY(-4px)" /></b>            <p class="text-light">
                </div>
            <p class="text-light text-center mt-3">Copyright © 2023 10MinZepto, Inc.</p>
            <p class="text-light fs-3" style="margin-left:570px;">
                <i class="fa-brands fa-square-facebook"></i>
                <i class="fa-brands fa-square-twitter"></i>
                <i class="fa-brands fa-square-whatsapp"></i>
                <i class="fa-brands fa-square-instagram"></i>
                <i class="fa-brands fa-linkedin"></i>
            </p>
            <p style="margin-left: 450px;">
                <a href="#" style="margin-left:40px; color: white;">Legal Stuff</a>
                <a href="#" style="margin-left:40px; color: white;">Privacy Policy</a>
                <a href="#" style="margin-left:40px; color: white;">Security</a>
            </p>
        </div>
    </div>
    <script src="~/Content/js/bootstrap.bundle.js"></script>
</body>
</html>
